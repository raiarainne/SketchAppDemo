<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffffff" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#03A9F4"
                android:endColor="#1C7197"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#f97f04" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />

        </shape>
    </item>
</selector>